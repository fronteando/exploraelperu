.blog
	&-owl
		margin-top 35px
		&-article
			width 100%
			display inline-block
			position relative
		&-details
			padding 15px
			text-align left
			&-title
				margin-bottom 5px
				h4
					font-family RobotoC
					font-weight 700
					text-transform uppercase
				h5
					font-family RobotoC
					font-weight 400
					color $red
					span
						text-transform uppercase
		&-text
			p
				font-family Roboto
				font-weight 300
				font-size .9em
				text-align justify
				margin-bottom 1em
		&-button
			text-align right
		&-box
			border-radius 10px
			border 1px solid #ebebeb
		&-img
			border-radius 8px 8px 0 0
			background-size cover
			background-position center
			background-repeat no-repeat
			width 100%
			height 130px
	&-link
		display inline-block
		margin-top 25px
		font-family Roboto
		font-weight 300
	&-btn
		display inline-block
		font-family Roboto
		font-weight 300
		font-size .9em