.blog
	&-owl
		margin-top 35px
		&-article
			width 100%
			display inline-block
			position relative
		&-box
			border-radius 10px
			border 1px solid #ebebeb
		&-img
			border-radius 8px 8px 0 0
			background-size cover
			background-position center
			background-repeat no-repeat
			width 100%
			height 130px
	&-link
		display inline-block
		margin-top 25px
		font-family Roboto
		font-weight 300