.nav
	background-color rgba($red-dark,.8)
	color $white
	&-ul
		> li
			a
				padding 0 7.5px
				position relative
				&:hover,
				&:focus,
				&:active
					color $white
					&:before
						content ''
						width 100%
						height 4px
						border-radius 10px
						background-color $red
						position absolute
						bottom 10px
						left 0
	&-link
		ul
			li
				a
					background-color $red
					padding 10px 20px
					border-radius 20px
					transition all .3s ease-in-out
					&:hover,
					&:focus,
					&:active
						background-color $white
						color $red
	@media screen and (max-width 800px)
		background-color rgba($red-dark,1)
		&-btn
			.btn
				&-square
					border 2px solid $white
					border-radius 8px
					.ico
						color white
				&-circle
					background-color $white
					border 2px solid $white
					border-radius 50%
					h4
						color $red-dark