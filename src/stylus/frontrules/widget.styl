.widget
	margin-left 60px
	&-section
		border-bottom 1px solid #d3d5d7
		box-shadow 0 0 5px 0 #e2e3e4
		position relative
		margin-bottom 30px
		padding 30px 30px 35px
		border-radius 4px
		h3
			margin-bottom 15px
			text-transform uppercase
		h6
			font-weight 400
		&:last-child
			margin-bottom 0
	@media screen and (max-width 800px)
		margin-left 0
		margin-top 50px